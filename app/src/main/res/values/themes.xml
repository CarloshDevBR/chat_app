<resources>

    <style name="Base.Theme.ChatApp" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary_500</item>
        <item name="colorSecondary">@color/secondary_500</item>
        <item name="colorTertiary">@color/tertiary_500</item>

        <item name="android:statusBarColor">@color/fourth_500</item>
    </style>

    <style name="Theme.ChatApp.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_logo_white</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="windowSplashScreenBackground">@color/primary_200</item>
        <item name="postSplashScreenTheme">@style/Base.Theme.ChatApp</item>
    </style>
</resources>